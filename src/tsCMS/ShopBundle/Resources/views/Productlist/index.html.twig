{% extends 'tsCMSSystemBundle::layout.html.twig' %}
{% block title %}{{ "productlists"|trans }}{% endblock %}
{% block content %}
    <a href="{{ path("tscms_shop_productlist_create") }}" class="btn btn-primary">{{ "productlist.create"|trans }}</a>
    <table class="table table-hover">
        <thead>
            <tr>
                <th>{{ "productlist.title"|trans }}</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            {% for productlist in productlists %}
                <tr>
                    <td>{{ productlist.title }}</td>
                    <td>
                        <a href="{{ path("tscms_shop_productlist_edit", {id: productlist.id}) }}">
                            <i class="fa fa-edit"></i>
                        </a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}